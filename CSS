.leaf {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  overflow: hidden; /* Ensures the rotated image doesn't overflow out of the leaf */
  	
}

#leaf-1 .leaf-image {
    width: 40%;
    height: 40%;
    background-size: contain;
    background-position: bottom;
  	background-repeat: no-repeat;
		position: absolute;
  	top: 30%;
 	 	left: 25%;
    transform: rotate(-45deg); /* Rotate the image to counteract the existing rotation */
}
#leaf-1 .leaf-overlay-text {
    position: absolute;
    top: 30%;
    left: 29%;
    transform: translate(-50%, -50%) rotate(-45deg); /* Rotate the overlay text as well */
    color: white;
    font-size: 16px;
    text-align: center;
    pointer-events: none;
}

